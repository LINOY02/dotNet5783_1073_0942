<Application x:Class="PL.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PL"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <local:ConvertImagePathToBitmap x:Key="ImagePathToBitmap"/>
        <local:ConvertBooleanToText x:Key="BooleanToText"/>
        <local:ConvertBooleanToColors x:Key="BooleanToColor"/>
        <local:NotBooleanToVisibilityConverter x:Key="NotBooleanToVisibility"/>
        <local:ConvertTextToBoolean x:Key="TextToBoolean"/>
        <local:ConvertTextToReadOnly x:Key="TextToReadOnly"/>
        <local:ConvertBooleanToContent x:Key="BooleanToContent"/>
        <local:ConvertTextUserToBoolean x:Key="TextUserToBoolean"/>
        <local:ConvertTextUserLogInToBoolean x:Key="TextUserLogInToBoolean"/>
        <local:ConvertTextToEnable x:Key="TextToEnable"/>
        <Style TargetType="Button">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Width" Value="166"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Arial Black"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="Background" Value="White"/>
        </Style>
    </Application.Resources>
</Application>
