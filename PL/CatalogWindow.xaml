<Window x:Class="PL.CatalogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        DataContext="{RelativeSource self}"
        mc:Ignorable="d"
        Title="CatalogWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Label">
            <Style.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">
                    <EventTrigger.Actions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Duration="0:0:0.300" Storyboard.TargetProperty="FontSize" To="15" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger.Actions>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <EventTrigger.Actions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Duration="0:0:0.600" Storyboard.TargetProperty="FontSize" To="10" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger.Actions>
                </EventTrigger>
            </Style.Triggers>
            <Style.Setters>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="FontFamily" Value="Arial Black"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Foreground" Value="Gray"/>
                <Setter Property="BorderBrush" Value="Gray"/>
                <Setter Property="Background" Value="White"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
            </Style.Setters>
        </Style>
        <DataTemplate x:Key ="CatalogDataTemplate" DataType="local:ProductItem">
            <Border
                Background="{Binding InStock, Mode=TwoWay, NotifyOnValidationError=false, ValidatesOnExceptions=true, Converter={StaticResource BooleanToColor}}">
                <Border.Effect>
                    <DropShadowEffect
                            ShadowDepth="1" />
                </Border.Effect>
                <StackPanel Width="210" Height="250">
                    <Image x:Name="prodImage"
                    Source="{Binding Path=picture, Converter={StaticResource ImagePathToBitmap}}"
                    HorizontalAlignment="Center"
                    Height="130"
                    Margin="15,15,15,15"
                    VerticalAlignment="Center"
                    Width="130"  />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock
                    Margin="5,5,5,5"
                    Text="{Binding Name}"
                    FontSize="15" Grid.Column="0" />
                        <TextBlock
                    Text="{Binding Category}"
                    FontSize="10" Grid.Column="1"
                    Foreground="Gray" HorizontalAlignment="Stretch" Margin="35,0,15,15" />
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="25"/>
                            <ColumnDefinition Width="25"/>
                            <ColumnDefinition Width="25"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock
                    Grid.Column="0"
                    Margin="5"
                    Text="{Binding Price,StringFormat=C, ConverterCulture=he-IL}"
                    FontSize="15" />

                    </Grid>
                    <TextBlock
                    Margin="5"
                    Text="{Binding InStock, Mode=TwoWay, NotifyOnValidationError=false, ValidatesOnExceptions=true, Converter={StaticResource BooleanToText} }"
                   FontSize="15" />
                </StackPanel>
            </Border>
        </DataTemplate>
    </Window.Resources>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height ="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row ="0" HorizontalAlignment="Left" Margin="85,10,0,384" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <Label Name ="TabelLabel" Content="Tabels" HorizontalAlignment="Center" Height="40" VerticalAlignment="Bottom" MouseEnter="TabelLabel_MouseEnter"/>
            <Label Name ="ChairLabel" Content="Chairs" Grid.Column="1" HorizontalAlignment="Center" MouseEnter="ChairLabel_MouseEnter"/>
            <Label Name ="SofaLabel" Content="Sofas" Grid.Column="2" HorizontalAlignment="Center" MouseEnter="SofaLabel_MouseEnter"/>
            <Label Name ="ClosetLabel" Content="Closetss" Grid.Column="3" HorizontalAlignment="Center" MouseEnter="ClosetLabel_MouseEnter"/>
            <Label Name ="BedLabel" Content="Beds" Grid.Column="4" HorizontalAlignment="Center" MouseEnter="BedLabel_MouseEnter"/>

        </Grid>
        <ScrollViewer Grid.Row ="1" Margin="0,10,0,0" BorderBrush="Gray">
            <ListView x:Name="CatalogListView"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                RenderTransformOrigin="0.5,0.5"
                ItemTemplate="{StaticResource CatalogDataTemplate}"
                Height="312"
                Width="716" MouseDoubleClick="CatalogListView_MouseDoubleClick"
                      >
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ListView>
        </ScrollViewer>
        <Button x:Name="MyCart" Height="NaN" Width="NaN" Margin="10,2,735,0" BorderBrush="White" Click="MyCart_Click">
            <Button.Background>
                <ImageBrush ImageSource="/סל קניות.png"/>
            </Button.Background>
        </Button>
        <Menu HorizontalAlignment="Left" Height="19" Margin="585,14,0,0" VerticalAlignment="Top" Width="95" Background="Transparent" RenderTransformOrigin="0.585,2.04">
            <MenuItem
                Header="Group by"
                FontSize="12"
                FontFamily="Arial Black"
                Foreground="Gray"
                FontWeight="Bold"
                FlowDirection="LeftToRight">
                <MenuItem
                x:Name="popularGroup"
                Header="most popular"
                FontSize="12"
                FontFamily="Arial Black"
                Foreground="Gray"
                FontWeight="Bold"
                Icon="."
                Click="popularGroup_Click"/>
                <MenuItem
                x:Name="expensiveGroup"
                Header="most expensive"
                FontSize="12"
                FontFamily="Arial Black"
                Foreground="Gray"
                FontWeight="Bold"
                Icon="."
                Click="expensiveGroup_Click"/>
                <MenuItem
                x:Name="cheapGroup"
                Header="cheapiest"
                FontSize="12"
                FontFamily="Arial Black"
                Foreground="Gray"
                FontWeight="Bold"
                Icon="."
                Click="cheapGroup_Click"/>
            </MenuItem>
        </Menu>
        <Button x:Name="clearBtn" Content="ALL" HorizontalAlignment="Left" BorderBrush="White" Height="20" Margin="680,0,0,0" VerticalAlignment="Center" Width="35" Click="clearBtn_Click"/>
        <Button x:Name="backBtn" HorizontalAlignment="Left" BorderBrush="White" Height="26" Margin="750,10,0,0" VerticalAlignment="Top" Width="25" Click="backBtn_Click">
            <Button.Background>
                <ImageBrush ImageSource="/GO BACK.png"/>
            </Button.Background>
        </Button>
    </Grid>
</Window>
