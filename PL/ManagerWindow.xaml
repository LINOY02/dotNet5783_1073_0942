        <Image HorizontalAlignment="Left" Height="103" Margin="266,148,0,0" VerticalAlignment="Top" Width="91" RenderTransformOrigin="0.833,0.515" Source="/background.webp"/>
        <Button x:Name="backBtn" BorderBrush="White" Height="27" Margin="710,364,40,0" VerticalAlignment="Top" Width="NaN" Click="backBtn_Click">
