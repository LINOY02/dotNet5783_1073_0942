<Window x:Class="PL.ProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="ProductWindow" Height="450" Width="800">
    <Grid>

        <ComboBox x:Name="CategorySelector" HorizontalAlignment="Left" Height="20" Margin="274,135,0,0" VerticalAlignment="Top" Width="113"/>
        <Button x:Name="Button" Content="" HorizontalAlignment="Left" Height="23" Margin="117,317,0,0" VerticalAlignment="Top" Width="47" Click="Button_Click"/>
        <Label Content="ID:" HorizontalAlignment="Left" Height="25" Margin="130,84,0,0" VerticalAlignment="Top" Width="50"/>
        <Label Content="Category:" HorizontalAlignment="Left" Height="30" Margin="130,130,0,0" VerticalAlignment="Top" Width="80"/>
        <Label Content="Name:" HorizontalAlignment="Left" Height="25" Margin="135,174,0,0" VerticalAlignment="Top" Width="70"/>
        <Label Content="Price:" HorizontalAlignment="Left" Height="30" Margin="140,224,0,0" VerticalAlignment="Top" Width="70"/>
        <Label Content="In Stock:" HorizontalAlignment="Left" Height="30" Margin="140,269,0,0" VerticalAlignment="Top" Width="70"/>
        <TextBox x:Name="IDTextBox" HorizontalAlignment="Left" Height="25" Margin="274,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="113"/>
        <TextBox x:Name="NameTextBox" HorizontalAlignment="Left" Height="31" Margin="274,174,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="113"/>
        <TextBox x:Name="PriceTextBox" HorizontalAlignment="Left" Height="30" Margin="274,224,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="113"/>
        <TextBox x:Name="InStockTextBox" HorizontalAlignment="Left" Height="30" Margin="274,269,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="113"/>

    </Grid>
</Window>
